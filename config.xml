<?xml version='1.0' encoding='utf-8'?>
<widget 
    id="de.direction.maps" 
    version="0.0.1" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DirMaps</name>
    <description>
        App that generates direction maps.
    </description>
    <author email="">
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="StatusBarBackgroundColor" value="#1976D2" />
        <icon src="./platform_assets/icon/icon.png"/>
        <splash src="./platform_assets/splashscreen/splash.png" density="port-ldpi"/>
        <splash src="./platform_assets/splashscreen/splash.png" density="port-mdpi"/>
        <splash src="./platform_assets/splashscreen/splash.png" density="port-hdpi"/>
        <splash src="./platform_assets/splashscreen/splash.png" density="port-xhdpi"/>
    </platform>
	
</widget>
